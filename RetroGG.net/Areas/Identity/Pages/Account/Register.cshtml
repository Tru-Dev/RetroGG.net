@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="col-md-6 offset-md-3">
    <h2 class="display-4 font-display text-center">@ViewData["Title"]</h2>
    <hr />
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group my-1 row align-items-center">
            <label asp-for="Input.Username" class="form-label col-sm-4 text-center text-sm-end"></label>
            <input asp-for="Input.Username" class="form-control col" />
            <div class="w-100"></div>
            <span asp-validation-for="Input.Username" class="text-danger col-12"></span>
        </div>
        <div class="form-group my-1 row align-items-center">
            <label asp-for="Input.Email" class="form-label col-sm-4 text-center text-sm-end"></label>
            <input asp-for="Input.Email" class="form-control col" />
            <div class="w-100"></div>
            <span asp-validation-for="Input.Email" class="text-danger col-12"></span>
        </div>
        <div class="form-group my-1 row align-items-center">
            <label asp-for="Input.Password" class="form-label col-sm-4 text-center text-sm-end"></label>
            <input asp-for="Input.Password" class="form-control col" />
            <div class="w-100"></div>
            <span asp-validation-for="Input.Password" class="text-danger col-12"></span>
        </div>
        <div class="form-group my-1 row align-items-center">
            <label asp-for="Input.ConfirmPassword" class="form-label col-sm-4 text-center text-sm-end"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control col" />
            <div class="w-100"></div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger col-12"></span>
        </div>
        <div class="form-group gap-2 d-grid my-1">
            <button type="submit" class="btn btn-primary btn-lg border-0">Register</button>
        </div>
        <p class="gap-2 d-grid my-1">
            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-dark border-0">Already have an account?</a>
        </p>
    </form>
</div>

