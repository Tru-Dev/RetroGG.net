<AuthorizeView>
    <Authorized>
        <li class="nav-item pe-3">
            <a class="nav-link text-center" href="Identity/Account/Manage">
                <svg class="bi mx-3" width="32" height="32" fill="currentColor">
                    <use xlink:href="/static/bootstrap-icons.svg#person" />
                </svg> <br /> Account
            </a>
        </li>
        <li class="nav-item pe-3">
            <form method="post" action="Identity/Account/LogOut">
                <button type="submit" class="nav-link btn btn-link text-center">
                    <svg class="bi mx-3" width="32" height="32" fill="currentColor">
                        <use xlink:href="/static/bootstrap-icons.svg#box-arrow-left" />
                    </svg> <br /> Log out
                </button>
            </form>
        </li>
    </Authorized>
    <NotAuthorized>
        <li class="nav-item pe-3">
            <a class="nav-link text-center" href="Identity/Account/Register">
                <svg class="bi mx-3" width="32" height="32" fill="currentColor">
                    <use xlink:href="/static/bootstrap-icons.svg#pencil-square" />
                </svg> <br /> Register
            </a>
        </li>
        <li class="nav-item pe-3">
            <a class="nav-link text-center" href="Identity/Account/Login">
                <svg class="bi mx-3" width="32" height="32" fill="currentColor">
                    <use xlink:href="/static/bootstrap-icons.svg#box-arrow-in-right" />
                </svg> <br /> Login
            </a>
        </li>
    </NotAuthorized>
</AuthorizeView>
